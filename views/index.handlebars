<h1>Burgers!</h1>

<div class="row">
  <div class="col-6">
    <h2>Burgers to Eat</h2>
    <ul>
      {{#each burgers}} {{#unless devoured}} {{burger_name}} {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-6">
    <h2>Burgers Devoured!</h2>

    <ul>
      {{#each burgers}} {{#if devoured}} {{burger_name}} {{> burgers/burger-block-delete devoured=false}} {{/if}} <br> {{/each}}
    </ul>
  </div>
</div>
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
